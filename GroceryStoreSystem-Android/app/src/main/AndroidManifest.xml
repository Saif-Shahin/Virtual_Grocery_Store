<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.mcgill.ecse321.projectgroupgroup01">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GroceryStoreSystemAndroid">
        <activity
            android:name=".AddItemToCart"
            android:exported="false"
            android:label="@string/title_activity_add_item_to_cart"
            android:theme="@style/Theme.GroceryStoreSystemAndroid.NoActionBar" />
        <activity
            android:name=".RegisterCustomer"
            android:exported="false"
            android:label="@string/title_activity_register_customer"
            android:theme="@style/Theme.GroceryStoreSystemAndroid.NoActionBar" />
        <activity
            android:name=".Login"
            android:exported="false"
            android:label="Login"
            android:theme="@style/Theme.GroceryStoreSystemAndroid.NoActionBar" />
        <activity
            android:name=".Cart"
            android:exported="false"
            android:label="Cart"
            android:theme="@style/Theme.GroceryStoreSystemAndroid.NoActionBar" />
        <activity
            android:name=".CustomerMain"
            android:exported="true"
            android:label="CustomerMain"
            android:theme="@style/Theme.GroceryStoreSystemAndroid.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.GroceryStoreSystemAndroid.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>